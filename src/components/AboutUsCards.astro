---
import type { IAboutCard } from "@/types/page";
import { BookMarked, DollarSign, ShieldCheck } from "lucide-react";

interface Props {
  title: string;
  cards: IAboutCard[];
}

const { title, cards } = Astro.props;
---

<div class="flex flex-col items-start justify-start pb-16">
  <h2 class="text-2xl font-semibold pb-12">{title}</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
    {
      cards.map((card) => (
        <div class="flex flex-col items-start justify-start p-8 border-1 border-subtle-secondary rounded-3xl shadow-blue gap-6">
          <div class="flex items-center justify-start gap-2">
            {card.icon == "dollar-sign" ? (
              <DollarSign size={48} className="text-primary" />
            ) : null}
            {card.icon == "book-marked" ? (
              <BookMarked size={48} className="text-primary" />
            ) : null}
            {card.icon == "shield-check" ? (
              <ShieldCheck size={48} className="text-primary" />
            ) : null}
            <h3 class="text-2xl font-bold w-full break-words text-left">
              {card.title}
            </h3>
          </div>
          <p>{card.description}</p>
        </div>
      ))
    }
  </div>
</div>
